# Terraform Variables Example - COST OPTIMIZED
# Copy this file to terraform.tfvars and fill in your values

aws_region = "us-east-1"
environment = "development"  # Use "development" for free tier, "production" for paid
project_name = "clinic-saas"

# Database Configuration - FREE TIER ELIGIBLE
db_instance_class = "db.t3.micro"  # Free tier: 750 hours/month
db_name = "clinic_db"
db_username = "admin"
db_password = "CHANGE_THIS_SECURE_PASSWORD"
backup_retention = 1  # Lower for dev (saves money)

# EC2 Configuration - FREE TIER ELIGIBLE
backend_instance_type = "t3.micro"   # Free tier: 750 hours/month
frontend_instance_type = "t3.micro"  # Free tier: 750 hours/month
key_pair_name = "clinic-key-pair"

# Network Configuration
vpc_cidr = "10.0.0.0/16"

# Cost Optimization Notes:
# - t3.micro instances are FREE for 750 hours/month (first 12 months)
# - db.t3.micro is FREE for 750 hours/month (first 12 months)
# - Skip NAT Gateway for development (saves $32/month)
# - Total cost: $0/month with free tier!
